{
  "name": "@rigger/shared",
  "version": "1.0.0",
  "description": "Shared libraries and utilities for the Rigger ecosystem",
  "main": "dist/rigger-shared.cjs.js",
  "module": "dist/rigger-shared.esm.js",
  "browser": "dist/rigger-shared.umd.js",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/rigger-shared.esm.js",
      "require": "./dist/rigger-shared.cjs.js",
      "browser": "./dist/rigger-shared.umd.js"
    }
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "serve": "node dist/index.js",
    "build": "rollup -c",
    "build:prod": "NODE_ENV=production rollup -c --environment NODE_ENV:production",
    "build:dev": "NODE_ENV=development rollup -c --environment NODE_ENV:development",
    "build:staging": "NODE_ENV=staging rollup -c --environment NODE_ENV:staging",
    "build:types": "tsc --emitDeclarationOnly",
    "build:docs": "typedoc --out docs src/",
    "build:themes": "node src/themes/generate-jekyll-themes.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=__tests__/unit",
    "test:unit:coverage": "jest --testPathPattern=__tests__/unit --coverage",
    "test:integration": "jest --testPathPattern=__tests__/integration",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:performance": "node scripts/test/performance.js",
    "test:a11y": "pa11y-ci --config .pa11yci.json",
    "test:platform:android": "echo 'Android platform tests'",
    "test:platform:ios": "echo 'iOS platform tests'",
    "test:platform:web": "echo 'Web platform tests'",
    "lint": "eslint src/ --ext .js,.ts",
    "lint:fix": "eslint src/ --ext .js,.ts --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "type-check": "tsc --noEmit",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "optimize:assets": "imagemin src/assets/* --out-dir=dist/assets",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "release": "semantic-release",
    "package": "npm pack",
    "prepublishOnly": "npm run clean && npm run build && npm run test",
    "publish:dev": "npm publish --tag dev",
    "publish:beta": "npm publish --tag beta",
    "publish:latest": "npm publish",
    "clean": "rm -rf dist coverage test-results",
    "docker:build": "docker build -t riggershared .",
    "docker:run": "docker run -p 3000:3000 riggershared",
    "deploy:staging": "./scripts/deploy/deploy.sh staging",
    "deploy:production": "./scripts/deploy/deploy.sh production",
    "env:demo": "node examples/environment-demo.js",
    "env:demo:prod": "NODE_ENV=production node examples/environment-demo.js",
    "env:validate": "node -e \"import('./src/config/environment.js').then(({validateEnvironment}) => validateEnvironment())\""
  },
  "keywords": [
    "rigger",
    "shared",
    "utilities",
    "enterprise"
  ],
  "author": "Tiation Technologies",
  "license": "MIT",
  "dependencies": {
    "@types/uuid": "^10.0.0",
    "axios": "^1.11.0",
    "dotenv": "^17.2.0",
    "joi": "^17.13.3",
    "pino": "^9.7.0",
    "uuid": "^9.0.0",
    "winston": "^3.8.0",
    "zod": "^4.0.5"
  },
  "devDependencies": {
    "eslint": "^8.0.0",
    "husky": "^9.1.7",
    "jest": "^29.0.0",
    "nodemon": "^3.1.10",
    "rollup": "^3.0.0"
  }
}
